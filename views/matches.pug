html
  head
    meta(charset='UTF-8')
    title Match
    link(rel='stylesheet', type='text/css', href='style/styles.css')
    script(type='text/javascript', src='functions.js')
  body
    header
      a(href='') loempia
      |  Welkom $user
    main.full
      h1 Match
      section(style='max-width: 25em; margin: auto; width: 60%; border: 0.3em aliceblue outset; border-radius: 1em;')

        img(style='width: 100%; border-radius: 1em;', src='#{sdata[0].name}', alt='')
        //profiel foto
        h2 #{data[0].name}, #{data[0].age}
        // naam, leeftijd persoon
        h2 #{data[0].beer}
        // favoriete biertje
        h3 #{data[0].totalbeers}
        // totaal aantal verschillende biertjes gedronken
        h3 #{data[0].city}
        // Welke stad komt de persoon vandaan
        a(href='')
          p Add
        // toevoegen als connectie
        a(href='')
          p Skip
